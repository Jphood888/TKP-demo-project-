  <div class="watermark">TKP App by Julian Pearse</div>
  <div class="watermark" style="left: 10px; top: 10px;">TKP App by Julian Pearse</div>

<script>
  emailjs.init("V7pFIPOBWfGovihl1"); // Your public key

  const form = document.getElementById("supportForm");
  const sendBtn = document.getElementById("sendBtn");
  const loader = document.getElementById("loader");
  const successMessage = document.getElementById("successMessage");
  const formSection = document.getElementById("formSection");
  const cooldownTimer = document.getElementById("cooldownTimer");
  const notification = document.getElementById("notification");

  const TWO_DAYS = 2 * 24 * 60 * 60 * 1000;

  function toggleFAQ(el) {
    const p = el.querySelector("p");
    const allP = document.querySelectorAll(".faq p");
    allP.forEach(item => { if (item !== p) item.style.display = "none"; });
    p.style.display = (p.style.display === "block") ? "none" : "block";
  }

  function formatTime(ms) {
    let total = Math.floor(ms / 1000);
    const h = String(Math.floor(total / 3600)).padStart(2, '0');
    const m = String(Math.floor((total % 3600) / 60)).padStart(2, '0');
    const s = String(total % 60).padStart(2, '0');
    return `${h}:${m}:${s}`;
  }

  function updateCooldown() {
    const lastSent = localStorage.getItem("lastSupportSent");
    if (!lastSent) return;

    const now = Date.now();
    const diff = now - Number(lastSent);

    if (diff < TWO_DAYS) {
      sendBtn.disabled = true;
      cooldownTimer.innerText = `Please wait before sending another message. Time left: ${formatTime(TWO_DAYS - diff)}`;
    } else {
      sendBtn.disabled = false;
      cooldownTimer.innerText = "";
    }
  }

  function showNotification(message, color = 'orange') {
    notification.innerText = message;
    notification.style.color = color;
    notification.style.display = 'block';
    setTimeout(() => {
      notification.style.display = 'none';
    }, 5000);
  }

  function showSuccess() {
    formSection.style.display = "none";
    successMessage.style.display = "block";
  }

  form.addEventListener("submit", function (e) {
    e.preventDefault();

    const lastSent = localStorage.getItem("lastSupportSent");
    const now = Date.now();

    if (lastSent && now - Number(lastSent) < TWO_DAYS) {
      showNotification(`Please wait. Time left: ${formatTime(TWO_DAYS - (now - Number(lastSent)))}`, 'red');
      return;
    }

    loader.style.display = "block";
    sendBtn.disabled = true;

    emailjs.send("service_y4avu89", "template_jpjmkuk", {
      to_email: "jphood112@gmail.com", // Force sending always to your email
      from_name: document.getElementById("name").value,
      reply_to: document.getElementById("email").value,
      message: document.getElementById("message").value
    })
    .then(function(response) {
      loader.style.display = "none";
      localStorage.setItem("lastSupportSent", now.toString());
      showSuccess();
    }, function(error) {
      loader.style.display = "none";
      sendBtn.disabled = false;
      showNotification("Failed to send. Please try again later.", 'red');
    });
  });

  setInterval(updateCooldown, 1000);
</script>


</body>
</html>
