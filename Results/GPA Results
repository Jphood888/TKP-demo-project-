  <script>
    const departmentLinks = {
      slt: "https://docs.google.com/spreadsheets/d/e/2PACX-1vSomeOtherID_SLT/pubhtml?widget=true&headers=false",
      comsci: "https://docs.google.com/spreadsheets/d/e/2PACX-1vSomeOtherID_COMSCI/pubhtml?widget=true&headers=false",
      comeng: "https://docs.google.com/spreadsheets/d/e/2PACX-1vSomeOtherID_COMENG/pubhtml?widget=true&headers=false",
      masscom: "https://docs.google.com/spreadsheets/d/e/2PACX-1vSomeOtherID_MASSCOM/pubhtml?widget=true&headers=false",
      busadmin: "https://docs.google.com/spreadsheets/d/e/2PACX-1vSomeOtherID_BUSADMIN/pubhtml?widget=true&headers=false",
      pubadmin: "https://docs.google.com/spreadsheets/d/e/2PACX-1vSomeOtherID_PUBADMIN/pubhtml?widget=true&headers=false",
      electeng: "https://docs.google.com/spreadsheets/d/e/2PACX-1vSomeOtherID_ELECTENG/pubhtml?widget=true&headers=false"
    };

    const accessKeys = {
      "SLT2025": "slt",
      "COMSCI2025": "comsci",
      "COMENG2025": "comeng",
      "MASSCOM2025": "masscom",
      "BUSADMIN2025": "busadmin",
      "PUBADMIN2025": "pubadmin",
      "ELECTENG2025": "electeng"
    };

    function verifyAccessKey() {
      const inputKey = document.getElementById("accessKeyInput").value.trim();
      const department = accessKeys[inputKey];

      if (department) {
        document.getElementById("passwordPrompt").style.display = "none";
        const select = document.getElementById("departmentSelect");
        select.value = department;
        select.disabled = true;
        loadResults();
      } else {
        showNotification("Invalid access key. Please try again.");
      }
    }

    function loadResults() {
      const dept = document.getElementById("departmentSelect").value;
      const frame = document.getElementById("resultsFrame");

      if (departmentLinks[dept]) {
        frame.src = departmentLinks[dept];
      } else {
        frame.src = "";
      }
    }

    function showNotification(message) {
      const notification = document.getElementById("notification");
      notification.textContent = message;
      notification.style.display = "block";
      setTimeout(() => {
        notification.style.display = "none";
      }, 4000);
    }

    // Set current year dynamically
    document.getElementById("yearDisplay").textContent = new Date().getFullYear();
  </script>
