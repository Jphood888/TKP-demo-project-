  <div id="passwordPrompt">
    <div>
      <h3>Enter Access Key</h3>
      <input type="password" id="accessKeyInput" placeholder="Enter your access key">
      <br>
      <button onclick="verifyAccessKey()">Submit</button>
    </div>
