  <div class="order-container">
    <h2>Student Payment Form</h2>

    <input type="text" id="name" placeholder="Full Name" required>
    <div id="nameError" class="error"></div>

    <select id="department" required>
      <option value="">Select Department</option>
      <option value="Computer Science">Computer Science</option>
      <option value="Computer Engineering">Computer Engineering</option>
      <option value="Electrical Engineering">Electrical Engineering</option>
      <option value="Science Laboratory Technician">Science Laboratory Technician</option>
      <option value="Business Administration">Business Administration</option>
      <option value="Public Administration">Public Administration</option>
      <option value="Mass Communication">Mass Communication</option>
      <option value="Other">Other</option>
    </select>

    <div class="checkbox-group">
      <strong>Select Semester:</strong>
      <label><input type="radio" name="semester" value="first" onclick="handleSemesterChange()"> First Semester</label>
      <label><input type="radio" name="semester" value="second" onclick="handleSemesterChange()"> Second Semester</label>
    </div>

    <div class="checkbox-group">
      <strong>Select what you're paying for:</strong>
      <label><input type="checkbox" name="payment" value="Tuition Fees" id="tuition" onclick="handleTuitionChange()"> Tuition Fees</label>
      <label><input type="checkbox" name="payment" value="Exam" id="exam"> Exam</label>
      <label><input type="checkbox" name="payment" value="ID Card" id="idcard"> ID Card</label>
      <label><input type="checkbox" name="payment" value="Library" id="library"> Library</label>
      <label><input type="checkbox" name="payment" value="Hostel"> Hostel</label>
    </div>

    <input type="number" id="amount" placeholder="Total budget Amount (₦)" min="0">

    <textarea id="description" rows="3" placeholder="Additional Details (Optional)"></textarea>

    <select id="receiver">
      <option value="2347032701606">Bursar</option>
      <option value="2348139363429">Registrar</option>
      <option value="2348146365089">Other Administratives</option>
    </select>

    <button class="order-btn" onclick="placeOrder()">Generate WhatsApp Message</button>
    <button class="whatsapp-btn" id="whatsappBtn" onclick="sendToWhatsApp()">Send via WhatsApp</button>
  </div>

  <div class="notify" id="notification"></div>
  <div class="watermark">TKP App by Julian Pearse</div>

  <script>
    function showNotification(message) {
      const notify = document.getElementById("notification");
      notify.textContent = message;
      notify.classList.add("show");
      setTimeout(() => notify.classList.remove("show"), 3000);
    }

    function isValidName(name) {
      return /^[a-zA-Z\s]{3,}$/.test(name);
    }

    function handleSemesterChange() {
      const semester = document.querySelector('input[name="semester"]:checked')?.value;
      const tuition = document.getElementById("tuition");
      const exam = document.getElementById("exam");
      const idcard = document.getElementById("idcard");
      const library = document.getElementById("library");

      [exam, idcard, library].forEach(el => {
        el.checked = false;
        el.disabled = false;
      });

      tuition.checked = false;

      if (semester === "first") {
        tuition.onclick = function () {
          if (this.checked) {
            exam.checked = true;
            idcard.checked = true;
            library.checked = true;
            exam.disabled = true;
            idcard.disabled = true;
            library.disabled = true;
          } else {
            exam.checked = false;
            idcard.checked = false;
            library.checked = false;
            exam.disabled = false;
            idcard.disabled = false;
            library.disabled = false;
          }
        };
      } else {
        tuition.onclick = null;
      }
    }

    function placeOrder() {
      const name = document.getElementById("name").value.trim();
      const nameError = document.getElementById("nameError");
      const department = document.getElementById("department").value;
      const selected = document.querySelectorAll('input[name="payment"]:checked');
      const amount = document.getElementById("amount").value.trim();

      nameError.innerText = "";

      if (!isValidName(name)) {
        nameError.innerText = "Enter a valid full name (at least 2 words).";
        return;
      }

      if (!department) {
        showNotification("Please select your department.");
        return;
      }

      if (selected.length === 0) {
        showNotification("Please select at least one payment option.");
        return;
      }

      if (!amount || isNaN(amount) || amount <= 0) {
        showNotification("Please enter a valid amount.");
        return;
      }

      const items = Array.from(selected).map(i => i.value).join(", ");
      localStorage.setItem("studentName", name);
      localStorage.setItem("studentDept", department);
      localStorage.setItem("paymentItems", items);
      localStorage.setItem("amountPaid", amount);

      showNotification("WhatsApp message generated. Tap the green button to send.");
      document.getElementById("whatsappBtn").style.display = "block";
    }

    function sendToWhatsApp() {
      const name = localStorage.getItem("studentName");
      const department = localStorage.getItem("studentDept");
      const items = localStorage.getItem("paymentItems");
      const amount = localStorage.getItem("amountPaid");
      const description = document.getElementById("description").value.trim();
      const receiver = document.getElementById("receiver").value;

      let message = `Hello, I am ${name}.\n\nDepartment: ${department}\nI want to pay for: ${items}\nAmount: ₦${amount}`;
      if (description !== "") {
        message += `\n\nNote: ${description}`;
      }

      const whatsappURL = `https://wa.me/${receiver}?text=${encodeURIComponent(message)}`;
      window.open(whatsappURL, "_blank");
    }
  </script>
</body>
