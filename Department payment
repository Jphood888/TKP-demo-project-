  <script>
    const paymentLinks = {
      slt: "https://docs.google.com/spreadsheets/d/e/2PACX-1vPAY_SLT_LINK/pubhtml?widget=true&headers=false",
      comsci: "https://docs.google.com/spreadsheets/d/e/2PACX-1vPAY_CS_LINK/pubhtml?widget=true&headers=false",
      comeng: "https://docs.google.com/spreadsheets/d/e/2PACX-1vPAY_CE_LINK/pubhtml?widget=true&headers=false",
      masscom: "https://docs.google.com/spreadsheets/d/e/2PACX-1vPAY_MASSCOM_LINK/pubhtml?widget=true&headers=false",
      busadmin: "https://docs.google.com/spreadsheets/d/e/2PACX-1vPAY_BUSADMIN_LINK/pubhtml?widget=true&headers=false",
      pubadmin: "https://docs.google.com/spreadsheets/d/e/2PACX-1vPAY_PUBADMIN_LINK/pubhtml?widget=true&headers=false",
      electelect: "https://docs.google.com/spreadsheets/d/e/2PACX-1vPAY_EE_LINK/pubhtml?widget=true&headers=false"
    };

    const accessKeys = {
      SLTPAY: "slt",
      CSPAY: "comsci",
      CEPAY: "comeng",
      MCPAY: "masscom",
      BAPAY: "busadmin",
      PAPAY: "pubadmin",
      EEPAY: "electelect"
    };

    function verifyAccessKey() {
      const inputKey = document.getElementById("accessKeyInput").value.trim().toUpperCase();
      const department = accessKeys[inputKey];

      if (department) {
        document.getElementById("passwordPrompt").style.display = "none";
        const select = document.getElementById("departmentSelect");
        select.value = department;
        select.disabled = true;
        loadPaymentTable();
      } else {
        showNotification("Invalid access key. Please try again.");
      }
    }

    function loadPaymentTable() {
      const dept = document.getElementById("departmentSelect").value;
      const frame = document.getElementById("paymentFrame");

      if (paymentLinks[dept]) {
        frame.src = paymentLinks[dept];
      } else {
        frame.src = "";
      }
    }

    function showNotification(message) {
      const notification = document.getElementById("notification");
      notification.textContent = message;
      notification.style.display = "block";

      setTimeout(() => {
        notification.style.display = "none";
      }, 4000);
    }

    document.getElementById("yearDisplay").textContent = new Date().getFullYear();
  </script>
